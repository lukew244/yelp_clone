<% if @restaurant.errors.any? %>
  <section id="errors">
    <h2> <%= pluralize(@restaurant.errors.count, "error") %>
    prohibited this restaurant from being saved: </h2>
    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </section>
<% end %>



<div class="col-md-6 col-md-offset-3">
  <h3 class="text-center">Add Restaurant</h3>
  
  <%= form_for @restaurant do |field| %>
    <div class="form-group">
      <%= field.label :name %>
      <%= field.text_field :name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= field.label :description %>
      <%= field.text_area :description, rows: 5, :class => 'form-control' %>
    </div>
    <%= field.submit :class => 'btn btn-primary' %>
  <% end %>
</div>
